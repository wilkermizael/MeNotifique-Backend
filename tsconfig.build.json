{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleDirectories": ["node_modules", "src"],
    "transform": {
      ".+\\.ts$": "ts-jest"
    },
    "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true
  },
    "testMatch": ["<rootDir>/tests/*.(test|spec).ts"]
}           